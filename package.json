{
    "name": "mcp-servers-internal",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "test": "turbo run test",
        "types": "turbo run types",
        "typecheck": "turbo run typecheck",
        "check": "biome check .",
        "check:fix": "biome check --write .",
        "check:fix:unsafe": "biome check --write --unsafe .",
        "prepare": "husky"
    },
    "devDependencies": {
        "turbo": "latest",
        "@biomejs/biome": "^2.2.0",
        "@typescript/native-preview": "7.0.0-dev.20250816.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.5",
        "wrangler": "^4.30.0"
    },
    "packageManager": "pnpm@10.13.1",
    "lint-staged": {
        "*": [
            "biome check --write --no-errors-on-unmatched"
        ]
    }
}
