---
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/Sidebar.astro";
import Icon from "../components/icons.astro";
---

<Layout title="Matt Carey">
  <Sidebar />
  <main class="flex-auto min-w-0 mt-6 md:mt-0 flex flex-col px-2 md:px-0">
    <section>
      <h1 class="font-bold text-3xl font-serif">Matt Carey</h1>
      <p class="my-5 max-w-[460px] text-neutral-800 dark:text-neutral-200">
        Hey I'm Matt,<br />welcome to my website.
      </p>
      <div class="flex items-start md:items-center my-8 flex-col md:flex-row">
        <img
          alt="Matt Carey"
          class="rounded-full grayscale"
          src="/avatar.jpg"
          width="100"
          height="100"
        />
      </div>

      <div class="mt-8">
        <h2 class="text-neutral-800 dark:text-neutral-200 mb-6">Find me on:</h2>
        <div class="flex items-center gap-6">
          <a
            href="https://github.com/mattzcarey"
            target="_blank"
            rel="noopener noreferrer"
            class="text-neutral-600 dark:text-neutral-400 hover:text-neutral-800 dark:hover:text-neutral-200 transition-all"
            title="GitHub"
          >
            <Icon name="github" class="w-6 h-6" />
          </a>
          <a
            href="https://bsky.app/profile/mattzcarey.com"
            target="_blank"
            rel="noopener noreferrer"
            class="text-neutral-600 dark:text-neutral-400 hover:text-neutral-800 dark:hover:text-neutral-200 transition-all"
            title="Bluesky"
          >
            <Icon name="bluesky" class="w-6 h-6" />
          </a>
          <a
            href="https://twitter.com/mattzcarey"
            target="_blank"
            rel="noopener noreferrer"
            class="text-neutral-600 dark:text-neutral-400 hover:text-neutral-800 dark:hover:text-neutral-200 transition-all"
            title="Twitter/X"
          >
            <Icon name="twitter" class="w-6 h-6" />
          </a>
          <a
            href="https://www.linkedin.com/in/mattzcarey/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-neutral-600 dark:text-neutral-400 hover:text-neutral-800 dark:hover:text-neutral-200 transition-all"
            title="LinkedIn"
          >
            <Icon name="linkedin" class="w-6 h-6" />
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
