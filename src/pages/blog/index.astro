---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Sidebar from '../../components/Sidebar.astro';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout title="Blog | Matt Carey">
  <Sidebar />
  <main class="flex-auto min-w-0 mt-6 md:mt-0 flex flex-col px-2 md:px-0">
    <section>
      <h1 class="font-bold text-3xl font-serif mb-8">Blog</h1>
      <div class="space-y-8">
        {sortedPosts.map((post) => (
          <article class="border-b border-neutral-200 dark:border-neutral-800 pb-8">
            <h2 class="text-xl font-semibold mb-2">
              <a href={`/blog/${post.slug}`} class="hover:text-neutral-600 dark:hover:text-neutral-300">
                {post.data.title}
              </a>
            </h2>
            <p class="text-neutral-600 dark:text-neutral-400 text-sm mb-3">
              {new Date(post.data.date).toLocaleDateString()}
            </p>
            {post.data.description && (
              <p class="text-neutral-700 dark:text-neutral-300">
                {post.data.description}
              </p>
            )}
            {post.data.tags && (
              <div class="flex flex-wrap gap-2 mt-3">
                {post.data.tags.map((tag) => (
                  <span class="text-xs bg-neutral-100 dark:bg-neutral-800 px-2 py-1 rounded">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </article>
        ))}
      </div>
    </section>
  </main>
</Layout>