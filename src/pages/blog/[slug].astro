---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Sidebar from '../../components/Sidebar.astro';
import BlueskyComments from '../../components/bluesky-comments';
import NewsletterSignup from '../../components/newsletter';
import ElevenLabsAudioNative from '../../components/voicePlayer';
import '../../styles/prose.css';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<'blog'>;
};

// For server-side rendering, we need to get the post dynamically
const { slug } = Astro.params;
let post: CollectionEntry<'blog'> | undefined;

if (Astro.props.post) {
  // Static generation case
  post = Astro.props.post;
} else {
  // Server-side rendering case
  const posts = await getCollection('blog');
  post = posts.find(p => p.slug === slug);
}

if (!post) {
  return Astro.redirect('/404');
}

const { Content } = await post.render();

const baseUrl = "https://mattzcarey.com";
const imageUrl = post.data.image ? `${baseUrl}${post.data.image}` : `${baseUrl}/og.jpg`;
const canonicalUrl = `${baseUrl}/blog/${post.slug}`;

const title = `${post.data.title} | Matt's Blog`;
const description = post.data.description || "AI Engineer and Community Builder based in London.";
---

<Layout title={title} description={description} image={post.data.image}>
  <Sidebar />
  <main class="flex-auto min-w-0 mt-6 md:mt-0 flex flex-col px-2 md:px-0">
    <article class="prose prose-neutral dark:prose-invert w-full max-w-none">
      <h1>{post.data.title}</h1>
      <p class="text-gray-500">
        {new Date(post.data.date).toLocaleDateString()}
      </p>
      {post.data.image && (
        <div class="flex justify-center mb-8">
          <img
            src={post.data.image}
            alt={post.data.title}
            class="rounded-lg max-h-[400px] object-cover"
          />
        </div>
      )}
      <div class="mb-8">
        <ElevenLabsAudioNative
          publicUserId="d9ac654064df1d8d2ace9a730b19fc2ffa05fa2d985d7acc665a5259b7aca2c3"
          size="small"
          client:load
        />
      </div>
      <Content />
      {post.data.bluesky_post_uri && (
        <BlueskyComments uri={post.data.bluesky_post_uri} client:load />
      )}
      <NewsletterSignup client:load />
    </article>
  </main>
</Layout>